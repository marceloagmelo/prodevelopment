</head>

<body class="$css_class">

$theme.include($body_top_include)

#if ($is_signed_in)
	#dockbar()
#end
<div class="rasecmadeiras">
<div class="cabecalho">
		<h1 class="company-title">
				<a class="logo" href="$company_url" title="#language("go-to") $company_name">
					<span>$company_name</span>
				</a>
			</h1>
			<div>

<div id="wrapper">
	<a href="#main-content" id="skip-to-content">#language("skip-to-content")</a>

	<header id="banner" role="banner">
		<div id="heading">
			<h1 class="site-title">
				#if ($show_site_name)
					<span class="site-name" title="#language("go-to") $site_name">
						$site_name
					</span>
				#end
			</h1>

			<h2 class="page-title">
				<span>$the_title</span>
			</h2>
		</div>

		#if (!$is_signed_in)
			<a href="$sign_in_url" id="sign-in" rel="nofollow">$sign_in_text</a>
		#end

		#if ($has_navigation || $is_signed_in)
			#parse ("$full_templates_path/navigation.vm")
		#end
		
		<!-- menu topo -->		
		<div id="menu_topo">
			<span class="info"><span class="destaque">(21) 2797-6200</span></span><span class="separador"></span>
			<span class="cartoes"><span class="cartao master" title="Aceitamos Mastercard"></span><span class="cartao visa" title="Aceitamos Visa"></span><span class="cartao diners" title="Aceitamos Diners"></span><span class="cartao amex" title="Aceitamos Amex"></span></span>
		</div>
		<!-- fim menu topo -->			
		

<!-- Menu header -->
	<div id="menu_cabecalho_div">
  		#set( $count = 0 )
  		#foreach ($nav_item in $nav_items)
  			#if( $count == 0 )
  				#set( $countChildren01 = 0 )
				#if ($nav_item.hasChildren())
					<ul>
						#foreach ($nav_child01 in $nav_item.getChildren())
							#set( $countChildren02 = 0 )
							#if ($nav_child01.hasChildren())
								<ul>
									#foreach ($nav_child02 in $nav_child01.getChildren())
									##if(( $countChildren02 == 0 ) && ($is_signed_in))
										## NÃ£o mostra item
									##else
										<li>
											<a href="$nav_child02.getURL()" $nav_child02.getTarget()>$nav_child02.getName()</a>
										</li>
									##end
									#set( $countChildren02 = $countChildren02 + 1 )
									#end
									<li>
										#if(!$is_signed_in)
											<a href="$sign_in_url">$sign_in_text</a>
										#end
									</li>
								</ul>
							#end
						#set( $countChildren01 = $countChildren01 + 1 )
						#end
					</ul>
				#end
			#end
  			#set( $count = $count + 1 )
  		#end
  		
	</div>
<!-- fim menu header-->

	</header>

	<div id="content">
		#if ($selectable)
			$theme.include($content_include)
		#else
			$portletDisplay.recycle()

			$portletDisplay.setTitle($the_title)

			$theme.wrapPortlet("portlet.vm", $content_include)
		#end

		#parse ("$full_templates_path/footer.vm")
	</div>
</div>

<div class="footer_copyright">&copy; Prodevelopment</div>
</div>

$theme.include($body_bottom_include)

</body>

$theme.include($bottom_include)

</html>